{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "newLine": "lf",
        "noUnusedLocals": true,
        "lib": ["es2015"],
        "outDir": "dist",
        "pretty": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
